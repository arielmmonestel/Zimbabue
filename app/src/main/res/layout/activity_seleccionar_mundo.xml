<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.electiva.zimbabue.Seleccionar_Mundo"
    android:background="@drawable/mundos">

    <Button
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:text="+"
        android:id="@+id/buttonSumas"
        android:layout_alignTop="@+id/buttonRestas"
        android:layout_toStartOf="@+id/buttonRestas"
        android:background="#69ffffff"
        android:onClick="abrirMundoSuma" />

    <Button
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:text="-"
        android:id="@+id/buttonRestas"
        android:layout_above="@+id/buttonDivision"
        android:layout_alignParentEnd="true"
        android:background="#69ffffff"
        android:onClick="abrirMundoResta"/>

    <Button
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:text="x"
        android:id="@+id/buttonMultiplicacion"
        android:layout_alignTop="@+id/buttonDivision"
        android:layout_alignEnd="@+id/buttonSumas"
        android:background="#69ffffff"
        android:onClick="abrirMundoMultiplicacion"/>

    <Button
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:id="@+id/buttonDivision"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/buttonRestas"
        android:text="รท"
        android:background="#69ffffff"
        android:onClick="abrirMundoDivision"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/SeleccionarMundo"
        android:id="@+id/textViewSelectMundo"
        android:textSize="19dp"
        android:layout_above="@+id/buttonSumas"
        android:layout_alignParentStart="false"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:textColor="#000000" />
</RelativeLayout>
