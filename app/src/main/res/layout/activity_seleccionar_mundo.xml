<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.electiva.zimbabue.Seleccionar_Mundo"
    android:background="@drawable/mundo">

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="+"
        android:id="@+id/buttonSumas"
        android:background="@drawable/world1"
        android:onClick="abrirMundoSuma"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/textViewSelectMundo" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="-"
        android:id="@+id/buttonRestas"
        android:background="@drawable/world2"
        android:onClick="abrirMundoResta"
        android:layout_above="@+id/buttonMultiplicacion"
        android:layout_alignStart="@+id/buttonSumas" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="x"
        android:id="@+id/buttonMultiplicacion"
        android:background="@drawable/world3"
        android:onClick="abrirMundoMultiplicacion"
        android:layout_above="@+id/buttonSumas"
        android:layout_alignStart="@+id/textViewSelectMundo" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/buttonDivision"
        android:background="@drawable/world4"
        android:onClick="abrirMundoDivision"
        android:layout_alignBaseline="@+id/textViewSelectMundo"
        android:layout_alignBottom="@+id/textViewSelectMundo"
        android:layout_toStartOf="@+id/buttonSumas" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Selecciona un mundo"
        android:id="@+id/textViewSelectMundo"
        android:textSize="19dp"
        android:textColor="#000000"
        android:background="@drawable/fondo_titulo_cantjugadores"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
